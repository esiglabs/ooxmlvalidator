{
  "name": "ooxmlvalidator",
  "version": "0.1.0",
  "description": "A signed OOXML (docx, xlsx, pptx, etc) validator",
  "main": "build/index.js",
  "module": "src/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "build": "babel src --compact=false --out-dir build --source-maps",
    "generate-docs": "jsdoc --destination doc/ src/index.js",
    "lint": "eslint src",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fotisl/ooxmlvalidator.git"
  },
  "keywords": [
    "PKI",
    "X.509",
    "WebCrypto",
    "OOXML",
    "docx",
    "xlsx",
    "pptx"
  ],
  "author": "Fotis Loukos <me@fotisl.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/fotisl/ooxmlvalidator/issues"
  },
  "homepage": "https://github.com/fotisl/ooxmlvalidator#readme",
  "devDependencies": {
    "babel-cli": "latest",
    "babel-preset-env": "latest",
    "jsdoc": "^3.5.5"
  },
  "browser": {
    "./build/webcrypto.js": false
  },
  "dependencies": {
    "jszip": "^3.1.5",
    "node-webcrypto-ossl": "^1.0.32",
    "pkijs": "^2.1.11",
    "xadesjs": "^2.0.11",
    "xml-core": "^1.0.12",
    "xmldsigjs": "^2.0.18"
  }
}
